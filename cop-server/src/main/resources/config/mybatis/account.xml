<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cop.mobi.account.service.dao.AccountDao">
	<resultMap id="userResult" type="com.cop.mobi.account.entity.UserPo">
		<result property="id" column="id" />
		<result property="obd" column="obd" />
		<result property="email" column="email" />
		<result property="name" column="name" />
		<result property="pwd" column="pwd" />
		<result property="sex" column="sex" />
		<result property="profile" column="profile" />
		<result property="registerTime" column="registerTime" />
	</resultMap>

	<select id="getUserById" resultMap="userResult">
		SELECT
		id, obd, email, name,
		pwd, sex, profile, registerTime
		FROM
		LC_User
		WHERE
		id=#{id}
	</select>

	<select id="getUserByOBD" resultMap="userResult">
		SELECT
		id, obd, email, name,
		pwd, sex, profile, registerTime
		FROM
		LC_User
		WHERE
		obd=#{obd}
	</select>

	<select id="getUserByName" resultMap="userResult">
		SELECT
		id, obd, email, name,
		pwd, sex, profile, registerTime
		FROM
		LC_User
		WHERE
		name=#{name}
	</select>

	<select id="getUserByEmail" resultMap="userResult">
		SELECT
		id, email, name,
		pwd, sex, profile, registerTime
		FROM
		LC_User
		WHERE
		email=#{email}
	</select>

	<select id="getUsers" resultMap="userResult">
		SELECT
		id, obd, email, name, pwd,
		sex, profile, registerTime
		FROM
		LC_User
		WHERE
		id IN (${ids})
	</select>

	<insert id="addUser">
		INSERT INTO
		LC_User
		(obd, registerTime)
		VALUES
		(#{obd},
		#{registerTime})
	</insert>

	<update id="updateUserInfo">
		UPDATE LC_User SET
		${values}
		WHERE
		id=#{id}
	</update>

	<update id="updateUserProfile">
		UPDATE LC_User SET
		profile=#{profile}
		WHERE id=#{id}
	</update>

	<delete id="deleteUser" parameterType="int">
		DELETE FROM LC_User WHERE
		id=#{id}
	</delete>
</mapper>